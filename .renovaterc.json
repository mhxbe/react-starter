{
  "extends": ["config:base", ":semanticCommits"],
  "schedule": "every weekend",
  "masterIssue": true,
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "groupName": "dependencies (non-major)"
    }
  ],
  "ignoreDeps": [
    "react",
    "react-dom",
    "@types/react",
    "@types/react-dom",
    "@testing-library/react"
  ]
}
